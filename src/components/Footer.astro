---
import { siteConfig } from "../config/content";
import IconMark from "./IconMark.astro";

const year = new Date().getFullYear();
---

<footer class="relative z-40 mt-12">
  <div class="mx-auto w-full max-w-5xl px-4 sm:px-6 lg:px-8">
    <div
      class="flex flex-col gap-4 sm:flex-row sm:items-center sm:justify-between
             border-t border-neutral-200/60 dark:border-neutral-800/60 py-6"
    >
      <!-- Brand -->
      <a href="/" class="flex items-center gap-3 group">
        <span
          class="inline-flex h-9 w-9 items-center justify-center rounded-lg
                 border border-neutral-300/70 bg-white/60
                 dark:border-neutral-700/70 dark:bg-neutral-900/40"
        >
          <span class="text-neutral-900 dark:text-neutral-100">
            <IconMark class="h-6 w-6" title={siteConfig.name} />
          </span>
        </span>
        <span class="font-semibold tracking-tight text-neutral-800 dark:text-neutral-200 group-hover:text-neutral-600 dark:group-hover:text-neutral-100 transition-colors">
          {siteConfig.name}
        </span>
      </a>

      <!-- Copyright -->
      <p class="text-sm text-neutral-600 dark:text-neutral-400">
        Â© {year} {siteConfig.name}. All rights reserved.
      </p>

      <!-- Social -->
      <div class="flex items-center gap-4">
        <a
          href={siteConfig.social.github}
          target="_blank"
          rel="noopener noreferrer"
          class="text-neutral-500 hover:text-neutral-700 dark:text-neutral-400 dark:hover:text-neutral-200 transition-colors"
          aria-label="GitHub"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path
              fill-rule="evenodd"
              clip-rule="evenodd"
              d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504..."
            />
          </svg>
        </a>

        <a
          href={siteConfig.social.email}
          class="text-neutral-500 hover:text-neutral-700 dark:text-neutral-400 dark:hover:text-neutral-200 transition-colors"
          aria-label="Email"
        >
          <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
              d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8" />
          </svg>
        </a>
      </div>
    </div>
  </div>
</footer>
