---
import { siteConfig } from "../config/content";
import IconMark from "./IconMark.astro";

const year = new Date().getFullYear();
---

<footer class="relative z-40 mt-12">
  <div class="mx-auto w-full max-w-5xl px-4 sm:px-6 lg:px-8">
    <div
      class="flex flex-col gap-4 sm:flex-row sm:items-center sm:justify-between
             border-t border-neutral-800/60 py-6"
    >
      <!-- Brand -->
      <a href="/" class="flex items-center gap-3 group">
        <span
          class="inline-flex h-9 w-9 items-center justify-center rounded-lg
                border border-neutral-700/70 bg-white/5
                group-hover:border-neon-cyan/30 group-hover:bg-neon-cyan/5
                transition-colors"
        >
          <span class="text-neutral-100 group-hover:text-neon-cyan transition-colors">
            <IconMark class="h-6 w-6" title={siteConfig.name} />
          </span>
        </span>

        <span class="font-semibold tracking-tight text-neutral-200 group-hover:text-neon-cyan transition-colors">
          {siteConfig.name}
        </span>
      </a>

      <!-- Copyright -->
      <p class="text-sm text-neutral-500">
        Â© {year} {siteConfig.name}. All rights reserved.
      </p>

      <!-- Social -->
      <div class="flex items-center gap-4">
        <!-- X -->
        {siteConfig.social?.twitter && (
          <a
            href={siteConfig.social.twitter}
            target="_blank"
            rel="noopener noreferrer"
            class="text-neutral-500 hover:text-neon-cyan transition-colors"
            aria-label="X"
            title="X"
          >
            <svg class="w-5 h-5" viewBox="0 0 100 100" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path
                fill-rule="evenodd"
                clip-rule="evenodd"
                d="M95 50c0 24.853-20.147 45-45 45S5 74.853 5 50 25.147 5 50 5s45 20.147 45 45Zm-51.21 2.688-21.51-28.76h16.578l14.1 18.855 17.453-18.855h4.872L55.135 45.694l22.72 30.377H61.279L45.967 55.598l-18.95 20.473h-4.873L43.79 52.688Zm-6.73-25.172h-7.616l33.63 44.967h7.616L37.06 27.516Z"
                fill="currentColor"
              ></path>
            </svg>
          </a>
        )}

        <!-- GitHub -->
        {siteConfig.social?.github && (
          <a
            href={siteConfig.social.github}
            target="_blank"
            rel="noopener noreferrer"
            class="text-neutral-500 hover:text-neon-cyan transition-colors"
            aria-label="GitHub"
            title="GitHub"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path
                d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483
                0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466
                -.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832
                .092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688
                -.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115
                2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595
                1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.12 2.419-.012 2.747
                0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z"
              ></path>
            </svg>
          </a>
        )}

        <!-- Email -->
        {siteConfig.social?.email && (
          <a
            href={siteConfig.social.email}
            class="text-neutral-500 hover:text-neon-cyan transition-colors"
            aria-label="Email"
            title="Email"
          >
            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
              ></path>
            </svg>
          </a>
        )}
      </div>
    </div>
  </div>
</footer>
