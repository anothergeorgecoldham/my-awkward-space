---
import { siteConfig } from "../config/content";
import IconMark from "./IconMark.astro";
import SocialIcon from "./SocialIcon.astro";

const year = new Date().getFullYear();
---

<footer class="relative z-40 mt-12">
  <div class="mx-auto w-full max-w-5xl px-4 sm:px-6 lg:px-8">
    <div
      class="flex flex-col gap-4 sm:flex-row sm:items-center sm:justify-between
             border-t border-neutral-800/60 py-6"
    >
      <!-- Brand -->
      <a href="/" class="flex items-center gap-3 group">
        <span
          class="inline-flex h-9 w-9 items-center justify-center rounded-lg
                border border-neutral-300 dark:border-neutral-700/70 bg-neutral-100 dark:bg-white/5
                group-hover:border-accent-primary/40 group-hover:bg-accent-primary/10
                transition-colors"
        >
          <span class="text-neutral-700 dark:text-neutral-100 group-hover:text-accent-secondary transition-colors">
            <IconMark class="h-6 w-6" title={siteConfig.name} />
          </span>
        </span>

        <span class="font-semibold tracking-tight text-neutral-700 dark:text-neutral-200 group-hover:text-accent-secondary transition-colors">
          {siteConfig.name}
        </span>
      </a>

      <!-- Copyright -->
      <p class="text-sm text-neutral-500">
        Â© {year} {siteConfig.name}. All rights reserved.
      </p>

<!-- Social -->
        <div class="flex items-center gap-4">
          {siteConfig.social?.linkedin && (
            <a
              href={siteConfig.social.linkedin}
              target="_blank"
              rel="noopener noreferrer"
              class="text-neutral-500 hover:text-accent-secondary transition-colors"
              aria-label="LinkedIn"
              title="LinkedIn"
            >
              <SocialIcon name="linkedin" class="w-5 h-5" />
            </a>
          )}

          {siteConfig.social?.github && (
            <a
              href={siteConfig.social.github}
              target="_blank"
              rel="noopener noreferrer"
              class="text-neutral-500 hover:text-accent-secondary transition-colors"
              aria-label="GitHub"
              title="GitHub"
            >
              <SocialIcon name="github" class="w-5 h-5" />
            </a>
          )}

          {siteConfig.social?.email && (
            <a
              href={siteConfig.social.email}
              class="text-neutral-500 hover:text-accent-secondary transition-colors"
              aria-label="Email"
              title="Email"
            >
              <!-- Email stays inline SVG (not a brand icon) -->
              <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                />
              </svg>
            </a>
          )}
        </div>
      </div>
    </div>
  </div>
</footer>
