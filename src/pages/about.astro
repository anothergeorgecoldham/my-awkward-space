---
import Layout from "../layouts/Layout.astro";
import { aboutContent, siteConfig } from "../config/content";
---

<Layout title={aboutContent.meta.title} description={aboutContent.meta.description}>
  <section class="py-10">
    <!-- Header -->
    <header class="mb-10">
      <h1 class="text-3xl sm:text-4xl font-bold tracking-tight text-neutral-900 dark:text-neutral-100">
        {aboutContent.title}
      </h1>
      <p class="mt-3 text-lg leading-7 text-neutral-600 dark:text-neutral-400 max-w-3xl">
        {aboutContent.description}
      </p>
    </header>

    <!-- Top split -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      <!-- Skills -->
      <div class="flex flex-col">
        <h2 class="text-xl font-semibold text-neutral-900 dark:text-neutral-100">Focus areas</h2>

        <div class="mt-4 flex flex-wrap gap-2">
          {aboutContent.skills.map((skill) => (
            <span class="px-3 py-1 text-sm rounded-full border border-neutral-300 dark:border-neutral-800/70 bg-neutral-100 dark:bg-white/5 text-neutral-700 dark:text-neutral-200 hover:border-accent-primary/40 hover:bg-accent-primary/10 transition-colors">
              {skill}
            </span>
          ))}
        </div>
      </div>

      <!-- Avatar placeholder -->
      <div class="flex md:justify-end">
        <div class="relative w-full md:w-[360px] h-[360px] rounded-2xl border border-neutral-300 dark:border-neutral-800/70 bg-neutral-100 dark:bg-white/5 overflow-hidden">
          <div class="w-full h-full flex items-center justify-center text-neutral-400 dark:text-neutral-600">
            <svg class="w-24 h-24" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
              <path
                fill-rule="evenodd"
                d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z"
                clip-rule="evenodd"
              ></path>
            </svg>
          </div>
        </div>
      </div>
    </div>

    <!-- Main content -->
    <div class="mt-14 grid grid-cols-1 md:grid-cols-[1fr_360px] gap-10">
      <!-- Experience -->
      <div>
        <h2 class="text-2xl font-bold text-neutral-900 dark:text-neutral-100">
          {aboutContent.experience.title}
        </h2>

        <div class="mt-8 space-y-6">
          {aboutContent.experience.items.map((item) => (
            <article
              class="rounded-2xl border border-neutral-300 dark:border-neutral-800/70 bg-neutral-100 dark:bg-white/5 p-6
                     hover:border-accent-primary/40 hover:bg-accent-primary/10 transition-colors"
            >
              <p class="text-xs uppercase tracking-widest text-neutral-500 dark:text-neutral-500">
                {item.period}
              </p>

              <h3 class="mt-2 text-lg font-bold text-neutral-900 dark:text-neutral-100">
                {item.position}
              </h3>

              <p class="mt-1 text-sm font-medium text-neutral-700 dark:text-neutral-300">
                {item.company}
              </p>

              <p class="mt-3 text-sm leading-6 text-neutral-600 dark:text-neutral-400">
                {item.description}
              </p>
            </article>
          ))}
        </div>
      </div>

      <!-- Connect -->
      <aside>
        <h2 class="text-2xl font-bold text-neutral-900 dark:text-neutral-100">
          {aboutContent.connect.title}
        </h2>

        <div class="mt-4 rounded-2xl border border-neutral-300 dark:border-neutral-800/70 bg-neutral-100 dark:bg-white/5 p-6">
          <p class="text-neutral-600 dark:text-neutral-400 leading-7">
            {aboutContent.connect.description}{" "}
            <a
              href={aboutContent.connect.email.href}
              class="text-accent-primary hover:text-accent-secondary underline underline-offset-4"
            >
              {aboutContent.connect.email.text}
            </a>
            .
          </p>

          <div class="mt-6 text-sm text-neutral-500">
            <span class="block">Site: {siteConfig.name}</span>
          </div>
        </div>
      </aside>
    </div>
  </section>
</Layout>
