---
import Layout from "../layouts/Layout.astro";
import { siteConfig } from "../config/content";

const links = [
  {
    name: "LinkedIn",
    url: "https://linkedin.com",
    description: "Professional profile and speaking activity.",
  },
  {
    name: "GitHub",
    url: "https://github.com",
    description: "Code, experiments, and this siteâ€™s source.",
  },
  {
    name: "YouTube",
    url: "https://youtube.com",
    description: "Talks, demos, and recorded sessions.",
  },
  {
    name: "X (Twitter)",
    url: "https://x.com",
    description: "Security notes and links.",
  },
  {
    name: "Threads",
    url: "https://threads.net",
    description: "Short posts and conversation.",
  },
  {
    name: "Bluesky",
    url: "https://bsky.app",
    description: "Microblogging, slower and calmer.",
  },
  {
    name: "Instagram",
    url: "https://instagram.com",
    description: "Behind-the-scenes and updates.",
  },
  {
    name: "TikTok",
    url: "https://tiktok.com",
    description: "Short-form clips and highlights.",
  },
  {
    name: "Email",
    url: "mailto:george+mas@coldham.com.au",
    description: "The most reliable way to reach me.",
  },
];
---

<Layout title={`Links - ${siteConfig.name}`} description="Where to find me across the web.">
  <section class="mx-auto w-full max-w-5xl px-4 sm:px-6 lg:px-8 py-10">
    <header class="mb-10">
      <h1 class="text-3xl sm:text-4xl font-bold tracking-tight text-neutral-900 dark:text-neutral-100">
        Links
      </h1>
      <p class="mt-3 text-lg leading-7 text-neutral-600 dark:text-neutral-400 max-w-3xl">
        Where I publish, post, and occasionally argue with computers.
      </p>
    </header>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      {links.map((link) => (
        <a
          href={link.url}
          target="_blank"
          rel="noopener noreferrer"
          class="group block"
        >
          <article
            class="rounded-2xl border border-neutral-300 dark:border-neutral-800/70 bg-neutral-100 dark:bg-white/5 p-6
                   transition-all duration-300
                   hover:border-accent-primary/40 hover:bg-accent-primary/10"
          >
            <div class="flex items-start justify-between gap-4">
              <div>
                <h2 class="text-lg font-bold text-neutral-900 dark:text-neutral-100 group-hover:text-accent-secondary transition-colors">
                  {link.name}
                </h2>
                <p class="mt-2 text-sm text-neutral-600 dark:text-neutral-400">
                  {link.description}
                </p>
              </div>

              <span class="text-neutral-500 group-hover:text-accent-secondary transition-colors">
                <svg
                  class="w-5 h-5"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                  aria-hidden="true"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2.5"
                    d="M13 7l5 5m0 0l-5 5m5-5H6"
                  ></path>
                </svg>
              </span>
            </div>
          </article>
        </a>
      ))}
    </div>
  </section>
</Layout>
